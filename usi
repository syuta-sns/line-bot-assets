   function shareToLine() {
     const url = encodeURIComponent(location.href);
     // LINEã®å…¬å¼ã‚·ã‚§ã‚¢URLã‚¹ã‚­ãƒ¼ãƒ 
     // PCã§ã‚¢ã‚¯ã‚»ã‚¹ã•ã‚ŒãŸå ´åˆã¯LINEã®å…¬å¼ã‚µã‚¤ãƒˆã«é£›ã³ã€ãƒ¢ãƒã‚¤ãƒ«ã§ã‚¢ã‚¯ã‚»ã‚¹ã•ã‚ŒãŸå ´åˆã¯LINEã‚¢ãƒ—ãƒªãŒé–‹ãã¾ã™ã€‚
     window.open(`https://social-plugins.line.me/lineit/share?url=${url}`, "_blank");
   }
   function copyLink() {
     navigator.clipboard.writeText(location.href);
     document.getElementById('copyMsg').style.display = 'block';
     setTimeout(() => { document.getElementById('copyMsg').style.display = 'none'; }, 1800);
   }

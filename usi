 <script>
   function shareToTwitter() {
     const url = encodeURIComponent(location.href);
     const text = encodeURIComponent("ç§ã®æ°—ã«ãªã‚‹äººã¯ã€Œã†ã—ç”·å­ã€ã§ã—ãŸğŸ‚ LINEæ€§æ ¼è¨ºæ–­ã§ãƒã‚§ãƒƒã‚¯ï¼â–¼");
     window.open(`https://twitter.com/intent/tweet?text=${text}&url=${url}`, "_blank");
   }
   function shareToThreads() {
     const url = encodeURIComponent(location.href);
     const text = encodeURIComponent("ç§ã®æ°—ã«ãªã‚‹äººã¯ã€Œã†ã—ç”·å­ã€ã§ã—ãŸğŸ‚ #LINEæ€§æ ¼è¨ºæ–­ â–¼");
     window.open(`https://www.threads.net/intent/post?text=${text}%20${url}`, "_blank");
   }
   function shareToInstagram() {
     alert("Instagramã‚¹ãƒˆãƒ¼ãƒªãƒ¼ã¸ã®ã‚·ã‚§ã‚¢ã¯ç”»åƒä¿å­˜â†’ã‚¢ãƒ—ãƒªå†…ã§ã‚·ã‚§ã‚¢ã—ã¦ã­ï¼(Webã‚·ã‚§ã‚¢APIéå¯¾å¿œ)");
   }

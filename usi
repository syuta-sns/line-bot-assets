 <script>
   function shareToTwitter() {
     const url = encodeURIComponent(location.href);
     const text = encodeURIComponent("私の気になる人は「うし男子」でした🐂 LINE性格診断でチェック！▼");
     window.open(`https://twitter.com/intent/tweet?text=${text}&url=${url}`, "_blank");
   }
   function shareToThreads() {
     const url = encodeURIComponent(location.href);
     const text = encodeURIComponent("私の気になる人は「うし男子」でした🐂 #LINE性格診断 ▼");
     window.open(`https://www.threads.net/intent/post?text=${text}%20${url}`, "_blank");
   }
   function shareToInstagram() {
     alert("Instagramストーリーへのシェアは画像保存→アプリ内でシェアしてね！(WebシェアAPI非対応)");
   }
   // LINEシェア機能を追加
   function shareToLine() {
     const url = encodeURIComponent(location.href);
     // LINEの公式シェアURLスキーム
     // PCでアクセスされた場合はLINEの公式サイトに飛び、モバイルでアクセスされた場合はLINEアプリが開きます。
     window.open(`https://social-plugins.line.me/lineit/share?url=${url}`, "_blank");
   }
   function copyLink() {
     navigator.clipboard.writeText(location.href);
     document.getElementById('copyMsg').style.display = 'block';
     setTimeout(() => { document.getElementById('copyMsg').style.display = 'none'; }, 1800);
   }
 </script>
